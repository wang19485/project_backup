<%- include("partials/header") -%>
<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="" class="form-label">Title</label>
    <input type="text" class="form-control" name="postTitle" placeholder="Your Title Here" autocomplete="off" required>
  </div>
  <div class="form-group">
    <label for="" class="form-label">Post</label>
    <textarea name="postBody" class="form-control" placeholder="Your Post Here" rows="5" cols="30" required></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>
